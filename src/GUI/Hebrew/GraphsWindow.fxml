<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane nodeOrientation="RIGHT_TO_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.GraphsWindow">
    <children>
        <VBox alignment="TOP_CENTER" nodeOrientation="RIGHT_TO_LEFT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="שלום: ">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="patientName" nodeOrientation="RIGHT_TO_LEFT">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <Hyperlink fx:id="logoutLabel" onAction="#logout" text="התנתק" underline="true">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Hyperlink>
                        <Region HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="back" alignment="TOP_LEFT" buttonType="RAISED" onAction="#back" ripplerFill="#d3d3d3" text="חזרה לתפריט" GridPane.columnIndex="2">
                            <font>
                                <Font size="17.0" />
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
                <TabPane nodeOrientation="RIGHT_TO_LEFT" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="פרטי מטופל">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Label fx:id="infoPatientName">
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                                    </VBox.margin>
                                                    <graphic>
                                                        <Label text="שם המטופל: " underline="true">
                                                            <font>
                                                                <Font size="16.0" />
                                                            </font>
                                                        </Label>
                                                    </graphic>
                                                    <font>
                                                        <Font size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="patientDateOfBirth">
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                                    </VBox.margin>
                                                    <graphic>
                                                        <Label text="תאריך לידה: " underline="true">
                                                            <font>
                                                                <Font size="16.0" />
                                                            </font>
                                                        </Label>
                                                    </graphic>
                                                    <font>
                                                        <Font size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="patientGender">
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                                    </VBox.margin>
                                                    <graphic>
                                                        <Label text="מין: " underline="true">
                                                            <font>
                                                                <Font size="16.0" />
                                                            </font>
                                                        </Label>
                                                    </graphic>
                                                    <font>
                                                        <Font size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="patientDominantHand">
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                                    </VBox.margin>
                                                    <graphic>
                                                        <Label text="יד דומיננטית: " underline="true">
                                                            <font>
                                                                <Font size="16.0" />
                                                            </font>
                                                        </Label>
                                                    </graphic>
                                                    <font>
                                                        <Font size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="patientGamesPlayed">
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                                    </VBox.margin>
                                                    <graphic>
                                                        <Label text="מספר משחקים עד כה: " underline="true">
                                                            <font>
                                                                <Font size="16.0" />
                                                            </font>
                                                        </Label>
                                                    </graphic>
                                                    <font>
                                                        <Font size="16.0" />
                                                    </font>
                                                </Label>
                                                <JFXButton fx:id="save" buttonType="RAISED" mnemonicParsing="false" onAction="#savePatientInfo" style="-fx-background-color: #CDCDCD;" text="ייצא נתונים לאקסל">
                                                    <VBox.margin>
                                                        <Insets top="10.0" />
                                                    </VBox.margin>
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </JFXButton>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="תוצאות אחרונות">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <TableView fx:id="resultsTable" />
                                                <Label text="הקש לחיצה כפולה על שורה, כדי לראות גרף עמודות">
                                                    <font>
                                                        <Font size="20.0" />
                                                    </font>
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </VBox.margin>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="גרף התקדמות">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <LineChart fx:id="shapesLineChart" nodeOrientation="LEFT_TO_RIGHT" title="זמני תגובה - צורות">
                                                    <xAxis>
                                                        <NumberAxis fx:id="shapes_game_id" label="משחקים" side="BOTTOM" />
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis fx:id="shapes_avgReactionTime" label="זמני תגובה" side="LEFT" />
                                                    </yAxis>
                                                </LineChart>
                                                <LineChart fx:id="texturesLineChart" nodeOrientation="LEFT_TO_RIGHT" title="זמני תגובה - מרקמים">
                                                    <xAxis>
                                                        <NumberAxis fx:id="textures_game_id" label="משחקים" side="BOTTOM" />
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis fx:id="textures_avgReactionTime" label="זמני תגובה" side="LEFT" />
                                                    </yAxis>
                                                </LineChart>
                                            </children>
                                        </HBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
