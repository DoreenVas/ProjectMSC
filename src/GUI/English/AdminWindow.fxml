<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AdminWindow">
    <children>
        <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <HBox>
               <children>
                  <ImageView fx:id="back" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#back" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="pic/misc/arrow.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <ImageView fitHeight="300.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="pic/misc/admin.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </VBox.margin>
            </ImageView>
                  <TableView fx:id="usersTable">
                      <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                      </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
                  </TableView>
                <HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT">
                    <children>
                        <JFXButton fx:id="patientShapePieChart" buttonType="RAISED" onAction="#patientShapesPieChart" text="Display shapes graph for patients">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="patientTexturesPieChart" buttonType="RAISED" onAction="#patientTexturesPieChart" text="Display textures graph for patients">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="patientBothPieChart" buttonType="RAISED" onAction="#patientBothPieChart" text="Display combined graph for patients">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                    </children>
                </HBox>
                <HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT">
                    <children>
                        <JFXButton fx:id="testerShapePieChart" buttonType="RAISED" onAction="#testerShapesPieChart" text="Display shapes graph for testers">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="testerTexturesPieChart" buttonType="RAISED" onAction="#testerTexturesPieChart" text="Display textures graph for testers">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="testerBothPieChart" buttonType="RAISED" onAction="#testerBothPieChart" text="Display combined graph for testers">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                    </children>
                </HBox>
                  <Label text="Double click on a user will transfer to the user's personal zone">
                      <font>
                          <Font name="System Bold" size="16.0" />
                      </font>
                  </Label>
                <JFXButton fx:id="exit" buttonType="RAISED" onAction="#exit" text="Exit">
                    <font>
                        <Font size="17.0" />
                    </font>
                </JFXButton>
            </children>
        </VBox>
    </children>
</AnchorPane>
