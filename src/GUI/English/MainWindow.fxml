<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.MainWindow">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXToggleButton fx:id="change_lng" contentDisplay="RIGHT" nodeOrientation="RIGHT_TO_LEFT" onAction="#change_lng" prefHeight="62.0" prefWidth="220.0" selected="true" text="החלף שפה לעברית">
                    <font>
                        <Font size="16.0" />
                    </font>
                </JFXToggleButton>
                <Label alignment="TOP_CENTER" text="Welcome" textAlignment="CENTER">
                    <font>
                        <Font size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" top="20.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="60.0" />
                    </padding>
                </Label>
                <GridPane alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" pickOnBounds="false">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="New User:" GridPane.columnIndex="3" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="60.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Label text="Existing User:" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="60.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="id" promptText="Enter ID" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets bottom="30.0" left="10.0" right="40.0" top="30.0" />
                            </GridPane.margin>
                            <font>
                                <Font size="16.0" />
                            </font>
                        </JFXTextField>
                        <JFXButton fx:id="signUp" buttonType="RAISED" onAction="#signUp" text="sign up" GridPane.columnIndex="3" GridPane.rowIndex="5">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                        </JFXButton>
                        <JFXButton fx:id="submit" buttonType="RAISED" onAction="#submit" text="sign in" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                        </JFXButton>
                        <Label text="Admin entry:" GridPane.columnIndex="5" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="60.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <JFXButton fx:id="admin_submit" buttonType="RAISED" onAction="#admin_submit" text="submit" GridPane.columnIndex="5" GridPane.rowIndex="5">
                            <font>
                                <Font size="17.0" />
                            </font>
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                        </JFXButton>
                        <JFXTextField fx:id="admin_user" promptText="Enter user name" GridPane.columnIndex="5" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets bottom="60.0" left="10.0" right="40.0" top="30.0" />
                            </GridPane.margin>
                            <font>
                                <Font size="16.0" />
                            </font>
                        </JFXTextField>
                        <JFXPasswordField fx:id="admin_password" promptText="Enter password" GridPane.columnIndex="5" GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets bottom="30.0" left="10.0" right="40.0" top="30.0" />
                            </GridPane.margin>
                            <font>
                                <Font size="16.0" />
                            </font>
                        </JFXPasswordField>
                    </children>
                </GridPane>
                <JFXButton fx:id="exit" buttonType="RAISED" onAction="#exit" text="Exit">
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                    <font>
                        <Font size="17.0" />
                    </font>
                </JFXButton>
            </children>
        </VBox>
    </children>
</AnchorPane>
