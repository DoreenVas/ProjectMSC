<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.InstructionsWindow">
    <children>
        <VBox alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Hello:">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="patientName" nodeOrientation="RIGHT_TO_LEFT">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <Hyperlink fx:id="logoutLabel" onAction="#logout" text="Disconnect" underline="true">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Hyperlink>
                        <Region HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="back" buttonType="RAISED" onAction="#mainWindow" text="Return" GridPane.columnIndex="2">
                            <font>
                                <Font size="17.0" />
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
                <VBox alignment="TOP_CENTER">
                    <children>
                  <HBox alignment="CENTER">
                     <children>
                        <ImageView fitHeight="77.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="pic/textures/arcs.png" />
                           </image>
                        </ImageView>
                              <Label text="Instructions">
                                  <font>
                                      <Font size="36.0" />
                                  </font>
                           <padding>
                              <Insets left="20.0" right="20.0" />
                           </padding>
                              </Label>
                        <ImageView fitHeight="77.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="pic/textures/monitor.png" />
                           </image>
                        </ImageView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </HBox>
                        <TextArea fx:id="instructionsText" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="340.0" prefWidth="638.0">
                     <font>
                        <Font size="16.0" />
                     </font></TextArea>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
